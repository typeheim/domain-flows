  "version": "0.1.0",
  "description": "DDD framework to work with Firebase",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "run:build": "npx tsc",
    "run:bootstrap": "npx lerna bootstrap",
    "run:spec": "npx jest",
