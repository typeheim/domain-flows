    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@types/reflect-metadata": "^0.1.0",
    "firebase": "^9.8.2",
    "firebase-admin": "^10.2.0",
    "firebase-functions": "^3.21.2",
    "firebase-tools": "^11.0.1",
    "jest": "^27.4.5",
